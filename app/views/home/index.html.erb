<h1>Welcome to Betacamp</h1>
<div class='row'>
  <div class='col-sm-2'>
    <ul class='nav nav-stacked'>
      <% @categories.each do |category| %>
        <li>
          <%= link_to_if (category.products_count > 0), category.name, category_path(category) %>
          <ul>
            <% category.children.each do |child| %>
              <li><%= link_to child.name, category_path(child) %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='col-sm-10'>
    <div class="row">
      <%= render partial: 'shared/products/product', collection: @products %>
    </div>
    <%= paginate @products %>
  </div>
</div>